{
  "name": "angularsandbox",
  "version": "1.0.0",
  "description": "A sandbox for Angular",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "browserify app.js -o bundle.js",
    "build-css": "node-sass --include-path scss main.scss styles.css",
    "dev": "npm run watch-css | watchify app.js -o bundle.js -v | browser-sync start --config bs-config.js",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "keywords": [
    "Angular",
    "JavaScript"
  ],
  "author": "Dan Gautsch",
  "license": "MIT",
  "devDependencies": {
    "angular": "^1.5.x",
    "browser-sync": "^2.13.0",
    "browserify": "^13.0.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "watchify": "^3.7.0"
  }
}
